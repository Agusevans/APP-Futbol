<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Alta de Jugador</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Favicons -->
    <link rel="icon" href="/images/pelota.png" sizes="32x32" type="image/png">

    <style>
        body {
            background: url('/images/fondo-futbol.jpg') no-repeat center center fixed;
            background-size: cover;
            padding-top: 70px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            max-width: 400px;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .form-container h1 {
            color: #007bff;
            font-size: 1.8rem;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-primary {
            width: 100%;
            border-radius: 5px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .navbar {
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>

<body>

<!-- HEADER -->
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand" href="/index">üè† Home</a>
        <div class="d-flex">
            <span class="navbar-text me-3">üë§ Hola {{usuario}}</span>
            <a class="btn btn-outline-light" href="#" onclick="confirmLogout()">Cerrar Sesi√≥n</a>
        </div>
    </div>
</nav>
<!-- END HEADER -->

<!-- BODY -->
<main>
    <div class="form-container">
        <h1>‚öΩ Alta de Jugador</h1>
        <form action="/jugadores" method="post">

            <!-- Mensaje de error -->
            {{#if error}}
                <div class="alert alert-danger" role="alert">
                    ‚ùå Error: El Nombre de jugador ya existe.
                </div>
            {{/if}}

            <div class="mb-3">
                <label class="form-label" for="nombre">Nombre del jugador</label>
                <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Ej: Lionel Messi" required>
            </div>
            <button class="btn btn-primary" type="submit">‚öΩ A√±adir</button>
        </form>
    </div>
</main>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function confirmLogout() {
        if (confirm("¬øEst√°s seguro de que deseas cerrar sesi√≥n?")) {
            window.location.href = "/logout";
        }
    }
</script>

</body>
</html>
