<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registrarse</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Favicons -->
    <link rel="icon" href="/images/pelota.png" sizes="32x32" type="image/png">

    <style>
        body {
            background: url('/images/fondo-futbol.jpg') no-repeat center center fixed;
            background-size: cover;
            padding-top: 70px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            max-width: 400px;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .form-container h1 {
            color: #007bff;
            font-size: 1.8rem;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-primary {
            width: 100%;
            border-radius: 5px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .navbar {
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>

<body>

<!-- HEADER -->
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand" href="/index">üè† Home</a>
    </div>
</nav>
<!-- END HEADER -->

<!-- BODY -->
<main class="d-flex justify-content-center align-items-center flex-column">
    <div class="form-container">
        <h1 class="mb-4">üîê Registrarse</h1>
        <form action="/usuario" method="post">

            <!-- Mensaje de error -->
            {{#if error}}
                <div class="alert alert-danger" role="alert">
                    ‚ùå Error: El Nombre de usuario ya existe.
                </div>
            {{/if}}

            <!-- User input -->
            <div class="mb-3 text-start">
                <label class="form-label" for="usuario">Nombre de usuario</label>
                <input name="usuario" id="usuario" class="form-control" min="3" max="20" required />
            </div>

            <!-- Password input -->
            <div class="mb-3 text-start">
                <label class="form-label" for="contrasenia">Contrase√±a</label>
                <input name="contrasenia" type="password" id="contrasenia" class="form-control" min="3" max="20" required />
            </div>

            <!-- Submit button -->
            <button class="btn btn-primary" type="submit">Registrarse</button>
        </form>
    </div>
</main>
</body>
</html>
